@model FormData

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-srart bg-success card-body">
    <h2>Register on consultation</h2>

    <div>
        <form method="post">
            <div class="form-group">
                @Html.LabelFor(model => model.FullName, new
                {
                @class = "control-label col-md-2"
                })
                <div class="col-md-20">
                    @Html.EditorFor(model => model.FullName)
                    @Html.ValidationMessageFor(model => model.FullName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new
                {
                @class = "control-label col-md-2"
                })
                <div class="col-md-20">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConsultationDate, new
                {
                @class = "control-label col-md-2"
                })
                <div class="col-md-20">
                    @Html.EditorFor(model => model.ConsultationDate)
                    @Html.ValidationMessageFor(model => model.ConsultationDate)
                </div>
            </div>

            <div>
                <select asp-for="LanguageConsulstation">
                    @foreach (var lang in Model.Languages)
                    {
                        <option value="@lang">@lang</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.LanguageConsulstation)
            </div>
            <button type="submit" class="btn btn-warn">Submit</button>
        </form>
    </div>
</div>
